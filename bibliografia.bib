	keywords = {Automation,Cameras,Computer science,Displays,Electronic travel aids,Eyes,Feedback amplifiers,Navigation,Object detection,State estimation,Time of arrival estimation,blind people,collision avoidance,computerised instrumentation,electronic orientation aids,electronic travel aids,handicapped aids,navigation systems,obstacle avoidance,position locator devices,survey,visually impaired people,wearable computers,wearable navigation systems,wearable obstacle avoidance,wearable obstacle detection systems,wearable systems},
	mendeley-groups = {Smart Cane},
