@article{Therib2017,
	abstract = {In this work, a device is designed and implemented that it is doing three jobs in order to help blind people to walk without accidents may occur. The first proposed one is accomplished by putting the ultrasonic sensor in a measured angle about 40o on a suitable blinding stick to detect if there is a hole or stair in front of blind at about 48 cm distance to prevent him from falling and as a result may be causing many injuries. The second one uses a moisture sensor in the first leg of the four legs stick to measure the degree of the land soil moisture in front of the blind and alert him when that degree exceeds a measured level that may immerse the feet of him. While, the third one is made by using another ultrasonic sensor on the stick to turn an alarm ON when there is an obstacle, person, or wall at a small distance about 50 cm near him to prevent a collision accident. The stick is implemented practically using four leg blinding cane, Arduino microcontroller and the three sensors. Also, the three buzzers and one vibrator motor and three LEDs are used on the stick to turn on when a such problems occur. The device gives good results when many visually impaired people in Merjan medical city in Babylon used it.},
	author = {Therib, Mohammed Azher},
	file = {:C$\backslash$:/Users/USUARIO/Desktop/UnB/12{\textordmasculine} Per{\'{i}}odo/Projeto Integrador de Engenharia 2/Ponto de Controle 1/Artigos/Therib{\_}JUB{\_}2017.pdf:pdf},
	issn = {1992-0652},
	journal = {Journal of University of Babylon},
	keywords = {Arduino microcontroller,alarm buzzers,blinding stick,moisture sensor,ultrasonic sensor,vibrator motor},
	mendeley-groups = {Smart Cane},
	number = {5},
	pages = {1759--1768},
	publisher = {Babylon University},
	title = {{Smart blinding stick with holes, obstacles and ponds detector based on microcontroller}},
	url = {https://www.iasj.net/iasj?func=article{\&}aId=132299},
	volume = {25},
	year = {2017}
}

